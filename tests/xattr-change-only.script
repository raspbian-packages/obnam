# Make two backup generations with different contents. Make sure the
# last generation can be restored correctly.

set -e

# This only works with local filesystem access, not over sftp.
# It also requires user_xattr to be set on the filesystem.
# If both requirements are not met, skip the test.
echo foo > "$DATADIR/data/foo"
if [ "$OBNAM_TEST_SFTP_ROOT" != yes ] &&
   setfattr --name=user.foo --value=bar "$DATADIR/data/foo" 2>/dev/null
then
    $SRCDIR/tests/backup

    setfattr --name=user.foo --value=bar "$DATADIR/data/foo"

    $SRCDIR/tests/backup
    $SRCDIR/tests/restore
    $SRCDIR/tests/verify
fi
